}
.top-type  image{
    width: 98rpx;
    height: 98rpx;
}
.top-type-title{
    width: 100%;
    height: 100%;
    text-align: center;
    margin: 0 2rpx;
}
.top-type-title text{
    display: block;
    width: 150rpx;
}

/* 热门菜谱 */
.hot-recipe-title{
    width: 750rpx;
    height: 100rpx;
    background-color: ccc;
    font-size: 36rpx;
    display: flex;
    align-items: center;
    font-weight: bolder;
    padding: 0rpx 40rpx;
}
.hot-recipe-title image{
    width: 37rpx;
    height: 41rpx;
    margin-right: 20rpx;
}
.hot-recipe-list{
    background-color: #f9f8f7;
    padding: 0rpx 40rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.hot-recipe-list-item{
    width: 320rpx;
    height: 448rpx;
    background-color: #fff;
    margin-top: 26rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;   
}
.hot-recipe-list-item image{
    width: 100%;
    height: 330rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;  
}
.hot-recipe-list-item-title{
    height: 70rpx;
    width: 100%;
    font-size: 16px;
    line-height: 70rpx;
    padding-left: 18rpx;
}
.hot-recipe-list-item-info{
    display: flex;
    padding: 0px  18rpx;
    justify-content: space-between;
    align-items: center;
    color: #bdbdbd;
}
.hot-recipe-list-item-info .left{
    font-size: 14px;
    display: flex;
    align-items: center;
}
.hot-recipe-list-item-info .right{
    font-size: 12px;
    display: flex;
    align-items: center;
}

.hot-recipe-list-item-info .left image{
    width: 30rpx;
    height: 30rpx;
}

.hot-recipe-list-item-info .right image{
    width: 27rpx;
    height: 16rpx;
}