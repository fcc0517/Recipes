<!--pages/pbrecipe/pbrecipe.wxml-->

<view class="page">
	<view class="page__bd">
		<!-- 发布菜单 -->
		<form bindsubmit="fbcd">
			<!-- 需要菜单名称 -->
			<view class="weui-cells__title">菜单名称</view>
			<view class="weui-cells weui-cells_after-title">
				<view class="weui-cell">
					<view class="weui-cell__bd">
						<input class="weui-input" placeholder="请输入菜单名称" name="recipeName" />
					</view>
				</view>
			</view>
			<!-- 选择菜谱分类 -->
			<view class="weui-cells__title">菜谱分类</view>
			<view class="weui-cells weui-cells_after-title">
				<view class="weui-cell">
					<view class="weui-cell__bd">
						<radio-group name="recipeTypeid">
							<!-- 循环遍历菜谱分类 -->
							<block wx:for="{{typesList}}">
              <!-- 给当前分类加了一个默认值，随便去了index为0的，第一个 -->
								<radio color="#ea932c" value="{{item._id}}" style="font-size:13.5px" checked="{{index == 0}}">{{item.typeName}}</radio>
							</block>
						</radio-group>
					</view>
				</view>
			</view>
			<!-- 菜谱图片 -->
			<view class="weui-cells__title">菜谱图片</view>
			<view class="weui-cells weui-cells_after-title">
				<view class="weui-cell">
					<view class="weui-cell__bd">
						<mp-cells>
							<mp-cell>
								<mp-uploader 
                    max-count="5" 
										style="font-size:14px"
										title="图片选择" 
										files="{{fileList}}"
										bindselect="_selectImg"
										binddelete="_del"
										>
								</mp-uploader>
							</mp-cell>
						</mp-cells>
					</view>
				</view>
			</view>
			<!-- 菜谱做菜步骤 -->
			<view class="weui-cells__title">菜品做法</view>
			<view class="weui-cells weui-cells_after-title">
				<view class="weui-cell">
					<view class="weui-cell__bd">
						<textarea class="weui-textarea"  name="recipeMakes" placeholder-style="font-size:26rpx" maxlength='-1' placeholder="请输入菜品做法" style="height: 6.6em" />
						<view class="weui-textarea-counter">不限字数</view>
          </view>
        </view>
      </view>
      <!-- 发布  需要当前用户的openid（云开发自带）-->
        <button class="weui-btn"  type="primary" form-type="submit">发布</button>
   
    </form>
  </view>
</view>